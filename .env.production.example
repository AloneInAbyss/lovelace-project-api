# Environment variables for production
# Copy this file to .env.prod and fill in your actual values

# Server Configuration
SERVER_PORT=8080

# MongoDB Configuration
SPRING_DATA_MONGODB_HOST=localhost
SPRING_DATA_MONGODB_PORT=27017
SPRING_DATA_MONGODB_USERNAME=your_username_here
SPRING_DATA_MONGODB_PASSWORD=your_secure_password_here
SPRING_DATA_MONGODB_DATABASE=your_database_name_here
SPRING_DATA_MONGODB_AUTH_DB=your_auth_db_name_here

# Redis Configuration
SPRING_DATA_REDIS_SSL=true # Enable SSL/TLS for production
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=your-redis-password

# JWT Configuration
# IMPORTANT: Generate a new secure secret for production!
# Use: openssl rand -base64 64
JWT_SECRET=your_production_jwt_secret_here
JWT_EXPIRATION=3600000 # 1 hour
JWT_REFRESH_EXPIRATION=604800000 # 7 days

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ALONEINABYSS=INFO

# Enable security headers
SERVER_SERVLET_SESSION_COOKIE_SECURE=true
SERVER_SERVLET_SESSION_COOKIE_HTTP_ONLY=true
SERVER_SERVLET_SESSION_COOKIE_SAME_SITE=strict

# Admin User Configuration
ADMIN_USERNAME=your_admin_username
ADMIN_EMAIL=your_admin_email
ADMIN_PASSWORD=your_admin_password

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
APP_CLIENT_URL=http://localhost:4200
EMAIL_VERIFICATION_EXPIRATION=86400000 # 1 day

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
